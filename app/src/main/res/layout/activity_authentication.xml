<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background22"
    tools:context=".Authentication">

<TextView
    android:text="가입을 원하는 동아리 이름 작성"

    android:textSize="20dp"
    android:textAlignment="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="동아리 이름 : "
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/showmethemoney"
            android:hint="여기에 작성해주세요"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <Button
        android:id="@+id/btn_apply"
        android:text="가입신청"
        android:backgroundTint="#DEBCEA"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textSize="30dp"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_back"
        android:text="나가기"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#DEBCEA"
        android:textSize="30dp"
        android:layout_gravity="center"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="동아리 이름을 기입하실때에는 정확하게 기입하여 주시기 바랍니다"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="지금바로 동아리에 가입하세요!"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>